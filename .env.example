# Kazira Environment Configuration
# Copy this file to .env and update with your values

# ==============================================
# BACKEND CONFIGURATION
# ==============================================

# Google Gemini API Key (REQUIRED)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
# SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./kazira.db

# Server Port
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment (development | staging | production)
ENVIRONMENT=development

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment (development | staging | production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable Marathon Mode for Demo
NEXT_PUBLIC_ENABLE_MARATHON_MODE=true

# Marathon Demo Duration in Minutes (for quick testing)
NEXT_PUBLIC_MARATHON_DEMO_DURATION_MINUTES=5
